//- abundances page
extends page.pug

block styles
  link( rel= 'stylesheet', href= '/css/sitemap.css' )/

block content
  div.pt-page.pt-box.pt-abundances
    include templates/breadcrumbs.pug
    h1!= __( 'abundances-title' )
    p.pt-page-intro!= __( 'abundances-description' )
    div.pt-sitemap
      each abundance in Object.keys( config.get( 'abundances' ) )
        div.pt-sitemap-item
          h3
            a(
              href= core.url( '/abundance/' + abundance )
            )!= __( abundance + '-abundance' )
          p!= __( abundance + '-abundance-description' )