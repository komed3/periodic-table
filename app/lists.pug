//- lists.pug
extends layout.pug

block title
  title!= __( lists.prop + '-label' ) + " â€” " + __( 'title' )
  meta( name="description", content= __( lists.prop + '-description' ) )/

block social
  meta( property="og:title", content= __( lists.prop + '-label' ) )/
  meta( property="og:description", content= __( lists.prop + '-description' ) )/

block styles
  link( rel="stylesheet", href="/css/lists.css" )/
  link( rel="stylesheet", href="/css/microtable.css" )/
  link( rel="stylesheet", href="/css/legend.css" )/

block content
  div.pt-page.pt-box.pt-list
    include templates/breadcrumbs.pug
    h1!= __( lists.prop + '-label' )
    p.pt-page-intro!= __( lists.prop + '-description' )
    div.pt-lists
      each list in lists.items
        div.pt-lists-item
          h3.pt-lists-item-title
            a( href='/list/' + lists.prop + '/' + list )!= __( lists.prop + '-' + list )
          p.pt-lists-item-desc!= __( lists.prop + '-' + list + '-description' )
  div.pt-page
    include templates/microtable.pug
    include templates/legend.pug