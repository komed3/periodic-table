//- lists page
extends page.pug

block styles
  link( rel= 'stylesheet', href= '/css/sitemap.css' )/

block content
  div.pt-page.pt-box.pt-properties
    h1!= __( 'lists-title' )
    p.pt-page-intro!= __( 'lists-description' )
    div.pt-sitemap
      each list in config.get( 'lists' )
        div.pt-sitemap-item
          h3
            a(
              href= core.url( '/list/' + list )
            )!= __( list + '-label' )
          p!= __( list + '-description' )