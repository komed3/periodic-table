//- page.pug (default layout)
doctype html
html( lang= locale )

  //- html header
  head
    meta( charset= 'UTF-8' )/
    meta( name= 'viewport', content= 'width=device-width, initial-scale=1.0' )/
    meta( name= 'msapplication-TileColor', content= '#ffffff' )/
    meta( name= 'theme-color', content= '#2a80ad' )/
    link( rel= 'icon', sizes= '16x16 32x32 48x48 64x64', href= '/res/favicon.ico' )/
    block title
      title= __( site + '-title' ) + ' â€” ' + __( 'periodic-table' )
      meta( name= 'description', content= __( site + '-description' ) )/
    meta( name= 'robots', content= 'all, max-image-preview:standard' )/
    meta( name= 'format-detection', content= 'telephone=no' )/
    link( rel= 'canonical', href= canonical )/
    block styles
      link( rel= 'stylesheet', href= '/css/page.css' )

  //- html content
  body( theme= theme )

    //- header
    header#header.pt-header( role= 'banner' )
      div.pt-header-left
        a.pt-header-menu( href= '#', title= __( 'nav' ) )
          i.icon.open menu
          i.icon.close close
        a.pt-header-logo( href= core.url( '/' ), title= __( 'periodic-table' ) )
          svg.pt-atom( width= '32', height= '32' )
            use( xlink:href= '/res/atom.svg#atom' )
        a.pt-header-title( href= core.url( '/' ) )!= __( 'periodic-table' )
      div.pt-header-right

    //- main content
    main#main.pt-wrapper( role= 'main' )
      block content

    //- footer
    footer#footer.pt-footer