//- properties page
extends page.pug

block styles
  link( rel= 'stylesheet', href= '/css/sitemap.css' )/

block content
  div.pt-page.pt-box.pt-properties
    include templates/breadcrumbs.pug
    h1!= __( 'props-title' )
    p.pt-page-intro!= __( 'props-description' )
    div.pt-sitemap
      each prop in config.get( 'properties' )
        div.pt-sitemap-item
          h3
            a(
              href= core.url( '/prop/' + prop )
            )!= __( 'prop-' + prop )
          p!= __( 'prop-' + prop + '-description' )