//- scale.pug
extends layout.pug

block title
  - var title = __( 'scale-title', __( scale.label ) )
  - var description = __( scale.label + '-description' )
  title= title + " â€” " + __( 'title' )
  meta( name="description", content= description )/

block social
  meta( property="og:title", content= title )/
  meta( property="og:description", content= description )/

block scripts
  script( src="/js/tablesort.min.js" )

block styles
  link( rel="stylesheet", href="/css/table.css" )/
  link( rel="stylesheet", href="/css/scale.css" )/

block content
  div.pt-page.pt-scale
    include templates/pt.pug
  div.pt-page.pt-box
    include templates/breadcrumbs.pug
    h1= title
    p.pt-page-intro= description
    table.pt-prop-table.zebra.sortable.pt-scale-table(
      layer= scale.scheme
      type="scale"
    )
      thead
        tr.pt-prop-table-row
          th.pt-prop-table-label.pt-scale-table-color
          th.pt-prop-table-label(
            colspan="2",
            sort-key="number"
          )!= __( 'element' )
          th.pt-prop-table-label.sort.right(
            sort-key="x"
          )!= __( scale.label )
      tbody
        each el, k in scale.results
          tr.pt-prop-table-row.pt-el(
            prop= el.scale.y,
            sort-value--number= el.number,
            sort-value--x= el.scale.x
          )
            td.pt-prop-table-value.pt-scale-table-color
            td.pt-prop-table-value.mini!= '<sub>' + el.number + '</sub>' + el.symbol
            td.pt-prop-table-value
              a( href='/e/' + el.symbol )!= el.names[ locale ]
            td.pt-prop-table-value.right
              span!= core.fNumber( el.scale.value, locale )