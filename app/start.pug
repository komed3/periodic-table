//- start page
extends page.pug

block title
  title= __( 'periodic-table' )
  meta( name= 'description', content= __( 'intro' ) )/

block social
  meta( property= 'og:title', content= __( 'periodic-table' ) )/
  meta( property= 'og:description', content= __( 'intro' ) )/

block styles
  link( rel= 'stylesheet', href= '/css/start.css' )/

block content
  div.pt-page
    include templates/pt.pug
    include templates/legend.pug
  div.pt-page.pt-box.pt-start
    h1!= __( 'periodic-table' )
    p.pt-page-intro!= __( 'intro' )
    div!= __( 'about' )
    div.pt-sitemap
      each page in [ 'nuclides', 'tools', 'lists', 'scales', 'props' ]
        div.pt-sitemap-item
          h3
            a(
              href= core.url( '/' + page )
            )!= __( page + '-title' )
          p!= __( page + '-description' )