//- templates/nav.pug
-
  var links = [
    [ '/', 'grid_view', __( 'title' ) ],
    [ '/nuclides', 'grid_4x4', __( 'nuclides-title' ) ],
    [ '/mmc', 'science', __( 'mmc-title' ) ],
    null,
    [ '/scale/discovery', 'school', __( 'discovery' ) ],
    null,
    [ '/prop/radioactive', 'flare', __( 'prop-radioactive' ) ],
    [ '/prop/natural', 'spa', __( 'prop-natural' ) ],
    [ '/prop/native', 'grid_goldenratio', __( 'prop-native' ) ],
    [ '/prop/vital', 'favorite', __( 'prop-vital' ) ],
    [ '/prop/clean', 'water_drop', __( 'prop-clean' ) ],
    [ '/prop/stable', 'hexagon', __( 'prop-stable' ) ],
    [ '/prop/noble', 'diamond', __( 'prop-noble' ) ],
    [ '/prop/light', 'airwave', __( 'prop-light' ) ],
    [ '/prop/heavy', 'weight', __( 'prop-heavy' ) ],
    [ '/prop/rare', 'brightness_empty', __( 'prop-rare' ) ],
    [ '/prop/platinum', 'aspect_ratio', __( 'prop-platinum' ) ],
    [ '/prop/refractory', 'hive', __( 'prop-refractory' ) ],
    [ '/prop/artificial', 'lens_blur', __( 'prop-artificial' ) ],
    null,
    [ '/glossary', 'dictionary', __( 'glossary-title' ) ],
    [ '/data', 'database', __( 'data-title' ) ]
  ];

div.pt-nav
  each link in links
    if link == null
      div.pt-nav-divider
    else
      a( href=link[0] ).pt-nav-item
        i.icon= link[1]
        span= link[2]