//- templates/shell.pug
div.pt-shell
  div.pt-shell-info
    div.pt-shell-line
      b= __( 'electrons' )
    each electrons, shell in page.element.data.shell
      div.pt-shell-line
        span= __( 'shell-' + ( shell + 1 ) ) + ':'
        b= electrons
  svg.pt-shell-model( viewbox= '0 0 150 150' )
    g.shells
      circle( cx= '75', cy= '75', r= '10' )/
      circle( cx= '75', cy= '75', r= '20' )/
      circle( cx= '75', cy= '75', r= '30' )/
      circle( cx= '75', cy= '75', r= '40' )/
      circle( cx= '75', cy= '75', r= '50' )/
      circle( cx= '75', cy= '75', r= '60' )/
      circle( cx= '75', cy= '75', r= '70' )/
    g.electrons
      each electrons, shell in page.element.data.shell
        circle(
          cx= '75', cy= '75',
          r= ( rad = ( shell + 1 ) * 10 ),
          stroke-dasharray= '1,' + (
            ( ( 2 * Math.PI * rad ) - electrons ) / electrons
          )
        )/
    circle.nucleus( cx= '75', cy= '75', r= '3' )/