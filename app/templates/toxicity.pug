//- templates/toxicity.pug
-
  var icons = {
    '#': 'avg_pace',
    oral: 'airware',
    dermal: 'eda',
    transdermal: 'eda',
    subcutaneous: 'dermatology',
    percutaneous: 'dermatology',
    inhalative: 'pulmonology',
    intramuscular: 'rheumatology',
    intraperitoneal: 'hermatology',
    intravenous: 'fluid_med',
    intratracheal: 'rib_cage',
    parenteral: 'fluid'
  }
div.pt-box-flex.pt-box-columns.pt-toxicity
  each t in toxicity
    div.pt-toxicity-item
      i.pt-toxicity-icon.icon!= icons[ t.application ]
      div.pt-toxicity-info
        b!= core.fNumber( t.value )
        if t.application == '#'
          div!= __( 'toxicity-time', core.fText( t.type ), __( 'organism-' + t.organism ), core.fTime( t.time || 0 )[0] )
        else
          div!= __( 'toxicity-info', core.fText( t.type ), __( 'organism-' + t.organism ), __( 'toxicity-' + t.application ) )